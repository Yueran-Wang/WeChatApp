/* 页面主容器样式 */
.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 750rpx;
  height: 100vh;
  box-sizing: border-box;
}

/* 介绍文本区域样式 */
.intro-text {
  width: 630rpx;
}

/* 标题样式 */
.intro-text text:first-child {
  font-size: 86rpx;
  font-weight: bold;
  color: #0d6efd;
  font-weight: bold;
  margin-bottom: 80rpx;
}

/* 正文文本样式 */
.intro-text text {
  display: block;
  font-size: 38rpx;
  color: #343a40;
  line-height: 52rpx;
  margin-bottom: 20rpx;
}

/* 功能按钮容器样式 */
.feature-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  padding: 40rpx 0;
  border-radius: 60rpx;
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* 按钮文本样式 */
.feature-button text {
  font-size: 38rpx;
  color: #0d6efd;
  line-height: 52rpx;
}

/* 按钮激活时的样式变化 */
.feature-button:active {
  transform: scale(0.95);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

/* 按钮图片样式 */
.button-image {
  width: 180rpx;
  height: 180rpx;
}

/* 按钮行样式 */
.button-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 630rpx;
  margin-bottom: 60rpx;
}

/* 宽度全宽样式 */
.width-full {
  width: 630rpx;
}

/* 宽度半宽样式 */
.width-half {
  width: 285rpx;
}

/* 定位容器样式 */
.flex-bottom {
  margin-bottom: 60rpx;
}

.flex-top {
  margin-top: 200rpx;
}
