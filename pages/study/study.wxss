/* pages/study/study.wxss */
.text-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx;
  color: #007bff;
  font-weight: bold;
  padding: 40rpx;
}

.section {
  width: 630rpx;
  margin-bottom: 20rpx;
}

.heading {
  font-size: 36rpx;
  color: #495057;
  font-weight: bold;
  padding: 10rpx 0;
}

.content {
  font-size: 32rpx;
  color: #343a40;
  line-height: 40rpx;
  text-indent: 2em;
}

.conclusion {
  width: 630rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #dc3545;
  line-height: 40rpx;
  padding: 20rpx 0 80rpx 0;
}